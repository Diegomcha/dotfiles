{
	"trailingComma": "none",
	"singleQuote": true,
	"arrowParens": "avoid",
	"tabWidth": 4,
	"useTabs": true,
	"plugins": [
		"prettier-plugin-package",
		"prettier-plugin-toml",
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"importOrderSortSpecifiers": true,
	"importOrderSeparation": true
}
